extends layout

block sidebar
  //https://startbootstrap.com/templates/simple-sidebar/
  //sidebar
  nav#sidebar-wrapper.bg-light.border-right
    div#sidebar-scroll-wrapper.list-group.list-group-flush
      div#sidebarOptions.list-group-item.list-group-item-action.bg-light
        button#updateURLCoords(type="button").btn.btn-secondary.btn-sm.sidebarButton update URL coordinates
        //p some buttons
      
      div.list-group-item.list-group-item-action.bg-dark.toggle-bar
        button#parameter-toggle(type="button").btn.btn-outline-light.btn-sm.sidebarButton toggle parameter-options
      div#browser-controls.list-group-item.list-group-item-action.bg-light.toggled
        div#bboxCoordSelection
          p Bounding-Box border coordinates
          div.form-group
            input#bboxNorth(name='bboxNorth',placeholder="North").form-control-sm.bboxForm
            input#bboxWest(name='bboxWest',placeholder="West").form-control-sm.bboxForm
            input#bboxEast(name='bboxEast',placeholder="East").form-control-sm.bboxForm
            input#bboxSouth(name='bboxSouth',placeholder="South").form-control-sm.bboxForm
          button#confirmCoords(type="button").btn.btn-secondary.btn-sm.sidebarButton confirm selection
          button#clearCoords(type="button").btn.btn-secondary.btn-sm.sidebarButton clear selection
          hr
        div#Keywords
          p include keywords:
          input#includeKeywords(name='includeKeywords').form-control-sm(placeholder="separated by comma").bboxForm
          p exclude keywords:
          input#excludeKeywords(name='excludeKeywords').form-control-sm(placeholder="separated by comma").bboxForm
          button#confirmFilter(type="button").btn.btn-secondary.btn-sm.sidebarButton confirm filter    
          hr
      // from here on summary stats
      div.list-group-item.list-group-item-action.bg-dark.toggle-bar
        button#parameter-toggle1(type="button").btn.btn-outline-light.btn-sm.sidebarButton toggle Summary Statistics
      div#browser-controls1.list-group-item.list-group-item-action.bg-light.toggled
        div#bboxCoordSelection1
          p Statistics
          div.btn-group-vertical
            button#density(type="button").btn.btn-secondary.btn-sm.sidebarButton Refresh Density of Tweets
            button#kest(type="button").btn.btn-secondary.btn-sm.sidebarButton Show K-Function
            button#lest(type="button").btn.btn-secondary.btn-sm.sidebarButton Show L-Function
            button#fest(type="button").btn.btn-secondary.btn-sm.sidebarButton Show F-Function
            button#gest(type="button").btn.btn-secondary.btn-sm.sidebarButton Show G-Function
          img#imagesummary.img-responsive
          
        //p browser controls. forms and such here
      div.list-group-item.list-group-item-action.bg-dark.toggle-bar
        button#browser-toggle(type="button").btn.btn-outline-light.btn-sm.sidebarButton toggle tweet-browser
      div#tweet-browser.list-group-item.list-group-item-action.bg-light.toggled
        //this is where a scrollable list of tweets on the map appears

    
    div#impressum.list-group-item.list-group-item-action.bg-light
      p Geomergency 2019
        
            
  
block content
  div#map
  div#progressIndicatorBar.bg-dark
    div#progressIndicator.border.rounded
